@model List<TodoItem>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            @await Html.PartialAsync("_MiniCalendar")
        </div>
        <div class="col-md-8">
            @if (ViewBag.SelectedDate == null)
            {
                <h4>Задачи без дедлайна</h4>
            }
            else
            {
                <h4>Задачи на @(((DateTime)ViewBag.SelectedDate).ToString("dd MMMM yyyy"))</h4>
            }

            @* --- Отображаем задачи в том же стиле, что и на главной странице --- *@
            @{
                var pendingTasks = Model.Where(t => !t.IsCompleted).ToList();
                var completedTasks = Model.Where(t => t.IsCompleted).ToList();
            }

            @if (!pendingTasks.Any() && !completedTasks.Any())
            {
                <div class="text-center mt-5 py-5 border rounded-3 bg-light">
                    <i class="bi bi-emoji-smile fs-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">Нет задач на эту дату.</h4>
                </div>
            }
            else
            {
                if (pendingTasks.Any())
                {
                    <div class="mb-5">
                        <h6 class="text-primary text-uppercase fw-bold mb-3 small">В процессе</h6>
                        <div class="list-group shadow-sm">
                            @foreach (var task in pendingTasks)
                            {
                                <div class="list-group-item d-flex align-items-center justify-content-between py-3">
                                    <div class="d-flex align-items-center">
                                        <input type="checkbox"
                                               class="form-check-input me-3"
                                               onchange="toggleTask(@task.Id)" />
                                        <span class="fw-bold">@task.Title</span>
                                    </div>
                                    <div class="btn-group">
                                        <button type="button"
                                                class="btn btn-link btn-sm text-info p-0 me-2 details-task-btn"
                                                data-title="@task.Title"
                                                data-description="@task.Description"
                                                data-is_completed="@(task.IsCompleted ? "true" : "false")">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button type="button"
                                                class="btn btn-link btn-sm text-secondary p-0 me-2 edit-task-btn"
                                                data-id="@task.Id"
                                                data-title="@task.Title"
                                                data-description="@task.Description">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button onclick="deleteTask(@task.Id)" class="btn btn-link btn-sm text-danger p-0">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                if (completedTasks.Any())
                {
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-3 small">Завершено</h6>
                        <div class="list-group">
                            @foreach (var task in completedTasks)
                            {
                                <div class="list-group-item d-flex align-items-center justify-content-between py-2 bg-light">
                                    <div class="d-flex align-items-center">
                                        <input type="checkbox"
                                               class="form-check-input me-3"
                                               onchange="toggleTask(@task.Id)"
                                               checked />
                                        <span class="text-decoration-line-through text-muted">@task.Title</span>
                                    </div>
                                    <div class="btn-group">
                                        <button type="button"
                                                class="btn btn-link btn-sm text-info p-0 me-2 details-task-btn"
                                                data-title="@task.Title"
                                                data-description="@task.Description"
                                                data-is_completed="@(task.IsCompleted ? "true" : "false")">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button onclick="deleteTask(@task.Id)" class="btn btn-link btn-sm text-danger p-0">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Эти функции должны быть определены где-то в layout или отдельном js-файле
        function toggleTask(id) { /* ... */ }
        function deleteTask(id) { /* ... */ }
        // Обработчики для кнопок "подробнее" и "редактировать" — если они есть
    </script>
}